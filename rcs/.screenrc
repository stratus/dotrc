# no copyright page.
startup_message off
# no audible bell.
vbell off
# detach on hangup.
autodetach on

defscrollback 10000
defutf8 on
nonblock on

# scrollback support
termcapinfo xterm* ti@:te@

bind f eval "caption splitonly" "hardstatus ignore"
bind F eval "caption always"    "hardstatus alwayslastline"
hardstatus alwayslastline "%w"
